<!DOCTYPE html>
<% header = {
  txt1 : '野田山動物病院',
  txt2 : 'お問い合わせ・ご予約はこちら',
  txt3 : 'Tel 0749-26-2528',
  txt4 : 'Web予約は</br>こちら',
  txt5 : 'RESERVED',
  txt6 : 'Menu'
} %>
<% var header_menu = [
  {href:'./staff/staff.html' , txt:'スタッフ紹介'},
  {href:'./health/health.html' , txt:'診療案内'},
  {href:'./about/about.html' , txt:'院内設備'},
  {href:'./access/access.html' , txt:'アクセス'}
] %>
<% var header_menu_about = [
  {href:'' , txt:' - 整形外科'},
  {href:'./tooth/tooth.html' , txt:' - 歯科'},
  {href:'./medical/medical.html' , txt:' - 健康診断'},
  {href:'./prevention/prevention.html' , txt:' - 予防'}
] %>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="./asset/css/app.css" />

    <!-- OGP設定　記載必要 -->
    <meta property="og:url" content="" />
    <meta property="og:image" content="" />
    <meta property="og:site_name" content="" />
    <meta property="og:title" content="" />
    <meta property="og:description" content="" />
    <meta property="og:type" content="website" />
    <meta name="twitter:card" content="summary_large_image" />
